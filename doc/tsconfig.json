{
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "compilerOptions": {
        "target": "ES2022",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "module": "ESNext",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": false,
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "types": [
            "solid-js",
            "vite/client",
            "./src/global.d.ts"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}
