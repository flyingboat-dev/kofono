{
    "name": "@flyingboat/solid-editor",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "sideEffects": false,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "source": "./src/index.ts",
    "exports": {
        "solid": "./dist/index.jsx",
        "import": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": ["dist", "src"],
    "scripts": {
        "build:ts": "tsc -p tsconfig.json",
        "build:editor": "tsup --config tsup.config.ts",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "editor": "vite serve dev",
        "format": "pnpm dlx @biomejs/biome format",
        "preview": "vite preview",
        "test": "vitest"
    },
    "dependencies": {
        "ace-builds": "^1.43.6",
        "class-variance-authority": "0.7.1",
        "clsx": "2.1.1",
        "solid-js": "^1.9.11"
    },
    "peerDependencies": {
        "solid-js": "^1.9.11",
        "tailwindcss": "^4.2.0"
    },
    "devDependencies": {
        "@solidjs/testing-library": "^0.8.10",
        "@tailwindcss/postcss": "^4.2.0",
        "@tailwindcss/vite": "^4.2.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^25.3.0",
        "jsdom": "^28.1.0",
        "postcss": "^8.5.6",
        "tailwind-merge": "^3.5.0",
        "tailwindcss": "^4.2.0",
        "tailwindcss-animate": "^1.0.7",
        "tslib": "^2.8.1",
        "tsup": "^8.5.1",
        "tsup-preset-solid": "^2.2.0",
        "typescript": "~5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-solid": "^2.11.10",
        "vitest": "^4.0.18"
    },
    "typesVersions": {},
    "engines": {
        "node": ">=20",
        "pnpm": ">=10.0.0"
    },
    "module": "./dist/index.js",
    "browser": {}
