{
    "name": "@flyingboat/kofono-monorepo",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build": "turbo run build",
        "build:watch": "node --experimental-strip-types scripts/build-watch.ts",
        "clean": "turbo run clean",
        "test": "turbo test",
        "test:core": "pnpm run test --filter @flyingboat/kofono",
        "dev": "turbo run --force --ui stream dev",
        "doc": "turbo run --ui stream doc",
        "lint": "turbo run lint",
        "lint:fix": "turbo  run --ui stream lint",
        "format": "turbo run format",
