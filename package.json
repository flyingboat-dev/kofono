        "turbo:tests": "turbo run tests",
        "turbo:clean": "turbo daemon clean"
    },
    "devDependencies": {
        "@biomejs/biome": "2.4.4",
        "concurrently": "9.2.1",
        "turbo": "2.8.10"
    },
    "engines": {
        "node": ">=22",
        "pnpm": ">=10"
    },
    "packageManager": "pnpm@10.30.1",
    "volta": {
        "node": "25.0.0",
        "pnpm": "10.30.1"
