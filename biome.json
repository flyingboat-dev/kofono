{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "useIgnoreFile": true
    },
    "files": {
        "includes": [
            "**/*.{js,jsx,ts,tsx,json,css,md}",
            "!**/node_modules",
            "!**/dist",
            "!**/tmp",
            "!**/coverage",
            "!**/build",
            "!**/.turbo"
        ]
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 80,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "bracketSameLine": true,
        "expand": "auto",
        "attributePosition": "auto",
        "bracketSpacing": true,
        "useEditorconfig": true
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "trailingCommas": "all",
            "semicolons": "always",
            "quoteStyle": "double"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noDefaultExport": "warn",
                "noExportedImports": "error"
            },
            "suspicious": {
                "noAlert": "warn",
                "noExplicitAny": "off",
                "noConsole": "warn",
                "noVar": "error",
                "noWith": "error"
            }
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4,
            "trailingCommas": "none"
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    }
}
